<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuideViewActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/guideImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/guideTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titel des Guides"
                android:textSize="20dp"
                android:fontFamily="@font/amiko_bold"/>

                    <TextView
                        android:id="@+id/textViewKm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 KM"
                        android:layout_toRightOf="@id/guideTitle"
                        android:layout_alignParentRight="true"
                        android:textAlignment="textEnd"
                        android:layout_gravity="end"
                        android:fontFamily="@font/amiko_bold"/>


                    <TextView
                android:id="@+id/textViewLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stadt, genauere Ortsangabe"
                android:fontFamily="@font/amiko"
                android:layout_below="@+id/guideTitle"/>

            <TextView
                android:id="@+id/textViewtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 Stationen | 0 h 0 min"
                android:fontFamily="@font/amiko"
                android:layout_below="@+id/textViewLocation"/>

                </RelativeLayout>

                <Button
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@id/textViewtime"
                    android:fontFamily="@font/amiko"
                    android:text="Tour starten"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_rounded_corners_gradient"
                    android:textColor="@color/white"
                    android:padding="5dp"
                    android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beschreibung"
                android:fontFamily="@font/amiko_bold"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/guideDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consetetur adipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At veroeos et accusam et justo duo dolores et ea rebum. Stet clita kasd gubergren, no sea takimata sanctus est Lorem ipsum dolor sit amet. Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et justo duo dolores et ea rebum. Stet clita kasd gubergren, no sea takimata sanctus est Lorem ipsum dolor sit amet."
                android:fontFamily="@font/amiko"
                android:layout_marginBottom="10dp"
                android:textSize="14dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stationen"
                android:fontFamily="@font/amiko_bold"
                android:textSize="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewStation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>



    </ScrollView>

</LinearLayout>