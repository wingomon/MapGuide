<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopGuides">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="In deiner Nähe"
        android:gravity="center"
        android:fontFamily="@font/airbnbcerealmedium"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorPrimary"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entdecke die beliebtesten Touren in deiner Nähe"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:fontFamily="@font/airbnbcereallight"
        android:textColor="@color/colorPrimary"/>

    <HorizontalScrollView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stadt"
            android:background="@drawable/button_rounded_corners_gradient"
            android:textColor="@color/white"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:fontFamily="@font/amiko"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weniger als 5 Km entfernt"
                android:background="@drawable/button_rounded_corners_gradient"
                android:textColor="@color/white"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:fontFamily="@font/amiko"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filter1"
                android:background="@drawable/button_rounded_corners_gradient"
                android:textColor="@color/white"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:fontFamily="@font/amiko"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filter2"
                android:background="@drawable/button_rounded_corners_gradient"
                android:textColor="@color/white"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:fontFamily="@font/amiko"/>


        </LinearLayout>


    </HorizontalScrollView>




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"/>

</LinearLayout>